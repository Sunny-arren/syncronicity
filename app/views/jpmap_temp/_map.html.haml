!!!
%html
  %head
    %title 根据城市名设置地图中心点
  %body
    %strong
      地図（featuring 百度）
    #allmap1
%html
  :javascript
    //百度地图API功能
    document.addEventListener("DOMContentLoaded", function() {
    	var map1 = new BMap.Map("allmap1");    // 创建Map实例
      var opts = {type: BMAP_NAVIGATION_CONTROL_SMALL}; 
      map1.centerAndZoom("#{@select_jp1.simplified}", 6);  // 初始化地图,设置中心点坐标和地图级别
      setTimeout(function(){
        map1.setZoom(10);
        }
        ,3000); 
      //添加地图类型控件
    	map1.addControl(new BMap.NavigationControl(opts));
      map1.addControl(new BMap.MapTypeControl({
    		mapTypes:[
                BMAP_NORMAL_MAP,
                BMAP_HYBRID_MAP
            ]}));
     })