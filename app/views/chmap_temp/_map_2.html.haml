%html
  %head
    %title 根据城市名设置地图中心点
  %body
    .map-ch_2{style: "display:flex;"}
      .map-ch_2__box{style: "align-items: center;"}
        %strong
          地図（featuring 百度）
        %input.button.is-danger.map_emerge2{type: "button", value: "表示",style:"font-size:12px; height:24px;"}  
    #allmap2{style: "margin-top:5px;"}
%html
  :javascript
    // 百度地图API功能
    var map2 = new BMap.Map("allmap2");    // 创建Map实例
    var opts = {type: BMAP_NAVIGATION_CONTROL_SMALL};    
    map2.centerAndZoom("#{@select_ch2.simplified}",6);  // 初始化地图,设置中心点坐标和地图级别
    setTimeout(function(){
      map2.setZoom(10);
      }
      ,3000);   
    //添加地图类型控件
    map2.addControl(new BMap.NavigationControl(opts));
    map2.addControl(new BMap.MapTypeControl({
      mapTypes:[
              BMAP_NORMAL_MAP,
              BMAP_HYBRID_MAP
          ]}));
     