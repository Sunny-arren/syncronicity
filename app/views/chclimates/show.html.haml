    %main.columns{style: 'margin-top: 1px;'} 
      .column.is-one-third
        %article.box.media
          .media-content
            -if @selected_jpcities.count == 1 
              - @select_jp1 = Jpcity.find(@ordered_jpcities[0][0])
            -elsif @selected_jpcities.count == 2 
              - @select_jp1 = Jpcity.find(@ordered_jpcities[0][0])
              - @select_jp2 = Jpcity.find(@ordered_jpcities[1][0])
