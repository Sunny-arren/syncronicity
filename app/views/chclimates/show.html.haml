                  %input.button.is-danger{:type => "button", :value => "城市2", :class => "s2",:style =>'margin-right: 5px;'}
                  %input.button.is-danger{:type => "button", :value => "城市3", :class => "s3",:style =>'margin-right: 5px;'}
